{
  "name": "ui-tester",
  "version": "1.0.2",
  "description": "UI Testing application for batch document uploads using browser automation",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "install-browsers": "npx playwright install chromium",
    "build": "electron-builder --win portable",
    "build:installer": "electron-builder --win nsis"
  },
  "keywords": [
    "ui-testing",
    "automation",
    "playwright",
    "electron",
    "document-upload"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "playwright": "^1.57.0"
  },
  "build": {
    "appId": "com.personal.uitester",
    "productName": "UI Tester",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json",
      "LICENSE"
    ],
    "extraResources": [
      {
        "from": "node_modules/playwright/.local-browsers",
        "to": "playwright-browsers",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "UITester-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "UITester-Setup-${version}.exe"
    }
  }
}
